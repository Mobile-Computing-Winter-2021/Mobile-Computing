<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ListView
        android:id="@+id/listofwifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scanwifi"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/scanwifi"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"

        android:layout_marginStart="52dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#DBDFDF"
        android:text="@string/wifi_scan"
        android:textColor="#272626"
        app:layout_constraintBottom_toTopOf="@+id/enter"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#6D7070"
        app:strokeWidth="1dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/roomno"
        android:layout_width="100dp"
        android:layout_height="49dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="8dp"
        android:background="#CDD5D5"

        android:backgroundTint="#DEE3E3"
        android:gravity="center"
        android:inputType="number"
        android:textColor="#272626"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/collectdata"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="#7B7E7E"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/showrssi"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#DEE3E3"
        android:gravity="bottom"
        android:text="Show RSSI"
        android:textColor="#272626"
        app:layout_constraintBottom_toTopOf="@+id/roomno"
        app:layout_constraintStart_toEndOf="@+id/scanwifi"
        app:strokeColor="#7B7E7E"
        app:strokeWidth="1dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/collectdata"
        android:layout_width="wrap_content"
        android:layout_height="49dp"

        android:layout_marginBottom="8dp"
        android:backgroundTint="#CDD5D5"
        android:gravity="bottom"
        android:text="Collect data"
        android:textColor="#272626"
        app:layout_constraintBottom_toTopOf="@+id/testview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.863"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#7B7C7C"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="49dp"

        android:layout_marginStart="52dp"
        android:layout_marginBottom="96dp"

        android:backgroundTint="#CDD5D5"
        android:gravity="bottom"
        android:text="test"
        android:textColor="#272626"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/testview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#7B7C7C"
        app:strokeWidth="1dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/testview"
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:background="#EAF1F1"
        android:backgroundTint="#CDD5D5"
        android:gravity="center"
        android:text="Show Room no."
        android:textAlignment="center"
        android:textColor="#DF0909"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonknn"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="#7B7E7E"
        app:strokeWidth="1dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="60dp"
        android:background="#EAF1F1"
        android:backgroundTint="#CDD5D5"
        android:text="Enter Room No:"
        android:textAlignment="center"
        android:textColor="#121010"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/test"
        app:layout_constraintEnd_toStartOf="@+id/roomno"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#7B7E7E"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/buttonknn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#CDD5D5"
        android:text="Test for KNN"
        android:textAlignment="center"
        android:textColor="#121010"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#7B7E7E"
        app:strokeWidth="1dp" />


</androidx.constraintlayout.widget.ConstraintLayout>