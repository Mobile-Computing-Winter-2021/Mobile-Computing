    <!--        app:strokeWidth="1dp" />-->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/q2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#6D7070"
        app:strokeWidth="1dp">

        <Button
            android:id="@+id/scanwifi"
            android:layout_width="165dp"
            android:layout_height="0dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#E9EDED"
            android:gravity="center"
            android:text="@string/wifi_scan"
            android:textColor="#272626"
            app:layout_constraintBottom_toBottomOf="@+id/showrssi"
            app:layout_constraintEnd_toStartOf="@+id/showrssi"
            app:layout_constraintTop_toTopOf="@+id/showrssi"
            app:layout_constraintVertical_bias="0.0"
            app:strokeColor="#8E8F8F"
            app:strokeWidth="1dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/showrssi"
            android:layout_width="170dp"
            android:layout_height="49dp"
            android:layout_marginStart="208dp"
            android:layout_marginTop="412dp"
            android:backgroundTint="#E9EDED"

            android:gravity="center"
            android:text="Show RSSI"
            android:textColor="#272626"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#7B7E7E"
            app:strokeWidth="1dp"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/q3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#6D7070"
        app:strokeWidth="1dp">

        <Button
            android:id="@+id/enter"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#E9EDED"
            android:gravity="center"
            android:text="Enter Room No"
            android:textColor="#121010"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="#7B7E7E"
            app:strokeWidth="1dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/collectdata"
            android:layout_width="wrap_content"
            android:layout_height="49dp"

            android:layout_marginStart="36dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#E9EDED"
            android:gravity="center"
            android:text="Collect data"
            android:textColor="#272626"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/enter"
            app:strokeColor="#7B7C7C"
            app:strokeWidth="1dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/q3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonknn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#6D7070"
        app:strokeWidth="1dp">


        <Button
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="49dp"

            android:layout_marginStart="56dp"

            android:backgroundTint="#E9EDED"
            android:gravity="center"
            android:text="test"
            android:textColor="#272626"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:strokeColor="#7B7C7C"
            app:strokeWidth="1dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/testview"
            android:layout_width="wrap_content"
            android:layout_height="49dp"

            android:gravity="center"
            android:text="Show Room no."
            android:textAlignment="center"
            android:textColor="#DF0909"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.721"
            app:layout_constraintStart_toEndOf="@+id/test"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:strokeColor="#7B7E7E"
            app:strokeWidth="1dp"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/buttonknn"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#E9EDED"
        android:gravity="center"
        android:text="Test for KNN"
        android:textAlignment="center"
        android:textColor="#121010"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toEndOf="@+id/buttonindoorloc"
        app:strokeColor="#7B7E7E"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/buttonindoorloc"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#E9EDED"
        android:gravity="center"
        android:text="IMU Localization"
        android:textAlignment="center"
        android:textColor="#121010"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#7B7E7E"
        app:strokeWidth="1dp" />


</androidx.constraintlayout.widget.ConstraintLayout>